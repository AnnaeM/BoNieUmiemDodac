<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="443dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Test" >

    <EditText
        android:id="@+id/miasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:text="Lublin" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/pogoda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miasto"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Pogoda" />

    <EditText
        android:id="@+id/temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pogoda"
        android:layout_below="@+id/pogoda"
        android:ems="10"
        android:hint="Temperatura w st C"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/wiatr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/temperatura"
        android:layout_below="@+id/temperatura"
        android:ems="10"
        android:hint="Predkosc wiatru"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/sporty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wiatr"
        android:layout_alignParentBottom="true"
        android:onClick="sporty"
        android:text="Sprawdz sporty" />

    <EditText
        android:id="@+id/dzienTygodnia"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/wiatr"
        android:layout_below="@+id/wiatr"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:text="Mon"  />

    <EditText
        android:id="@+id/dzien"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/dzienTygodnia"
        android:layout_below="@+id/dzienTygodnia"
        android:ems="10"
        android:hint="Data"
        android:inputType="number" />

    <EditText
        android:id="@+id/miesiac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dzien"
        android:layout_alignRight="@+id/sporty"
        android:layout_below="@+id/dzienTygodnia"
        android:layout_toRightOf="@+id/dzienTygodnia"
        android:ems="10"
        android:inputType="number" />

   <EditText
        android:id="@+id/rok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/miesiac"
        android:layout_alignRight="@+id/godzina"
        android:layout_alignTop="@+id/miesiac"
        android:layout_toRightOf="@+id/miesiac"
        android:ems="10"
        android:text="2013"
        android:inputType="number" />
    
    <EditText
        android:id="@+id/godzina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dzien"
        android:layout_below="@+id/dzien"
        android:text="12:00:00"
        android:ems="10" />

    

</RelativeLayout>

</ScrollView>